{
  "manifest_version": 2,

  "name": "CatBlock",
  "description": "Replace blocks with pictures of cute cats.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://www.reddit.com/*"],
      "js": ["CatBlock.js", "jquery.min.js"]
    }],
  "permissions": [
    "http://thecatapi.com/"
  ],
  
  "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },
  
  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_popup": "popup.html"
  }
  
}
